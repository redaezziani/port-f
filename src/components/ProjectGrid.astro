---
interface Project {
  title: string;
  description: string;
  image: string;
  url: string;
}
interface Props {
  projects: Project[];
}
const { projects } = Astro.props as Props;
---

<section
class="w-full max-w-4xl py-6 grid grid-cols-1 gap-4 lg:grid-cols-3"
itemprop="mainContentOfPage"
>
    {projects.map((project) => (
        <div class="  flex flex-col w-full col-span-1 gap-4 justify-start items-start">
        <span class=" w-full h-52 aspect-video p-1 border-neutral-400/35 rounded-lg border flex justify-center items-center">
            {/* <img
            src={project.image}
            alt={project.title}
            class="rounded-md w-full h-full object-cover border-neutral-400/45 border "
            /> */}

            <span
            class="rounded-md w-full h-full bg-neutral-300 object-cover border-neutral-400/45 border "
            >

            </span>
        </span>
        <div class="flex flex-col gap-1 pl-1 justify-start items-start">
            <h3 class="text-base font-medium">{project.title}</h3>
            <p class="text-neutral-600 dark:text-neutral-400 text-sm">
            {project.description}
            </p>
            <a
            href={project.url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-primary text-sm mt-2 underline decoration-primary  decoration-1 underline-offset-2"
            >
            Voir le projet
            </a>

        </div>
        </div>
    ))}
</section>